{
  "name": "ts-ctags",
  "version": "0.0.6",
  "author": "neolao <contact@neolao.com>",
  "description": "Ctags-like generator for TypeScript",
  "repository": "https://github.com/neolao/ts-ctags.git",
  "license": "MIT",
  "bin": {
    "ts-ctags": "./ts-ctags.js"
  },
  "dependencies": {
    "docopt": "^0.6.2",
    "glob": "^7.1.4",
    "lodash": "^4.17.15",
    "typescript": "~1.4.1"
  },
  "devDependencies": {
    "eslint": "^6.5.1",
    "eslint-plugin-solfegejs": "^1.0.17",
    "eslint-watch": "^6.0.1",
    "husky": "^3.0.8",
    "jest": "^24.9.0",
    "lint-staged": "^9.4.1"
  },
  "scripts": {
    "lint": "eslint .",
    "lint:watch": "esw --watch --cache --clear .",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "eslintConfig": {
    "extends": [
      "plugin:solfegejs/recommended"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest --lastCommit"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint"
    ]
  },
  "jest": {
    "verbose": true,
    "transformIgnorePatterns": [
      "<rootDir>"
    ]
  }
}
